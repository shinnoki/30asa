<h1>Listing songs</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Level</th>
    <th>Ver</th>
    <th>Notes</th>
    <th></th>
    <th></th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= link_to song.title, song%></td>
    <td><%= song.level %></td>
    <td><%= song.ver %></td>
    <td><%= song.notes %></td>
    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <td><%= link_to 'Destroy', song, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

